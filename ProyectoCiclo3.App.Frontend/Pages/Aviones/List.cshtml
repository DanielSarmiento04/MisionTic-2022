                <td>
                    <form method="POST">
                        
                        <input type="number" class="form-control d-none" id="id" asp-for="@Aviones.id">
                        <button type="submit"class="btn btn-danger">Eliminar</button>
                    </form>   

                </td>                     
              
            </td>
        </tr>
    }
</table>

