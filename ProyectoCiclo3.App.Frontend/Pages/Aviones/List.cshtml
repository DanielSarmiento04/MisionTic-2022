<table class="table">
    <tr>
        <td>ID</td>
        <td>MARCA</td>
        <td>MODELO</td>
        <td>Numeros ASIENTOS</td>
        <td>BAÃ‘OS</td>
        <td>CAPACIDAD maxima</td>
        <td>Opciones</td>
    </tr>
    @foreach (var Aviones in Model.LAviones)
    {
        <tr>
            <td>@Aviones.id</td>
            <td>@Aviones.marca</td>
            <td>@Aviones.modelo</td>
            <td>@Aviones.numero_asientos</td>
            <td>@Aviones.numero_banos</td>
            <td>@Aviones.capacidad_maxima</td>
            <td>
