@page
@model ProyectoCiclo3.App.Frontend.Pages.EditRutasModel
@{
    var Rutas = Model.Rutas;
}

<div class="text-center">
  <form method = "POST">

    <div class="form-group row">
      <label for="id" class="col-sm-2 col-form-label">Id</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="id" name="id" placeholder="Id" asp-for ="@Rutas.id">
      </div>
    </div>

    <div class="form-group row">
      <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="nombre" asp-for="@Rutas.nombre">
      </div>
    </div>

    <div class="form-group row">
      <label for="origen" class="col-sm-2 col-form-label">Origen</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="origen" name="origen" placeholder="origen" asp-for ="@Rutas.origen">
      </div>
    </div>
    
    <div class="form-group row">
      <label for="tiempoEsperado" class="col-sm-2 col-form-label">Tiempo Esperado:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="tiempoEsperado" name="tiempoEsperado" placeholder="Tiempo Esperado" asp-for ="@Rutas.tiempoEsperado">
      </div>
    </div>

    <hr/>  
    <button type="submit" class="btn btn-success">Enviar</button>
  </form>




</div>