@page
@model ProyectoCiclo3.App.Frontend.Pages.FormRutasModel
@{ 
  var Rutas = Model.Rutas; 
}
 

<div class="text-center">
  @* POST FOR TAKE INFORMATION AND SEND FOR OTHER PART *@
  <form method = "POST">

    <div class="form-group row">
      <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="nombre" placeholder="Nombre" asp-for="@Rutas.nombre">
      </div>
    </div>

    <div class="form-group row">
      <label for="origen" class="col-sm-2 col-form-label">Origen:</label>
      <div class="col-sm-10">
        <input type="origen" class="form-control" id="origen" placeholder="Origen" asp-for ="@Rutas.origen">
      </div>
    </div>
    
    <div class="form-group row">
      <label for="tiempoesperado" class="col-sm-2 col-form-label">Tiempo Esperado:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="tiempoesperado"  placeholder="Tiempo esperado" asp-for ="@Rutas.tiempoEsperado">
      </div>
    </div>
    <hr/>  
    <button type="submit" class="btn btn-success">Enviar</button>
  </form>

</div>